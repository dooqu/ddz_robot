    "version": "0.2.0",
    "configurations": [
    {
        "name": "Launch robot",
        "type": "cppdbg",
        "request": "launch",
        "program": "${workspaceFolder}/bin/Debug/ddz_robot",
        "args": [],
        "stopAtEntry": false,
        "cwd": "${workspaceFolder}",
        "environment": [],
        "externalConsole": true,
        "MIMode": "gdb",
        "setupCommands": [
            {
                "description": "Enable pretty-printing for gdb",
                "text": "-enable-pretty-printing",
                "ignoreFailures": true
            }
        ]
    }
    ,
    {
        "name": "attach robot",
        "type": "cppdbg",
       "request": "attach",
        "program": "${workspaceFolder}/bin/Debug/ddz_robot",
        "processId": "${command:pickProcess}",
        "linux": {
            "MIMode": "gdb"
        },
        "osx": {
            "MIMode": "lldb"
        },
        "windows": {
            "MIMode": "gdb"
        }
    }
    ]
}